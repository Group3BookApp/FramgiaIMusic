<% @artists.each do |artist| %>
  <table id="table" class="table table-hover">
    <tbody>
      <tr>
        <td class="width_avatar">
          <%= image_tag artist.avatar.url, size: Settings.size_avatar %>
        </td>
        <td class="width_name"><%= artist.name %></td>
        <td class="width_description">
          <%= truncate artist.description, length: Settings.truncate_description %>
        </td>
        <td><%= artist.albums.count %></td>
        <td><%= artist.songs.count %></td>
        <td class="width_action">
          <%= link_to t(".view"), admin_artist_path(artist),
            class: "width_a btn btn-info btn-sm" %>
          <%= link_to t(".edit"), edit_admin_artist_path(artist),
            class: "width_a btn btn-warning btn-sm" %>
          <%= link_to t(".delete"), admin_artist_path(artist), method: :delete,
            class: "width_a btn btn-danger btn-sm", data: {confirm: t(".you_sure")} %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
