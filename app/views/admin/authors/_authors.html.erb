<% @authors.each do |author| %>
  <table id="table" class="table table-hover">
    <tbody>
      <tr>
        <td class="width_avatar">
          <%= image_tag author.avatar.url, size: Settings.size_avatar %>
        </td>
        <td class="width_name"><%= author.name %></td>
        <td class="width_description">
          <%= truncate author.description, length: Settings.truncate_description %>
        </td>
        <td class="width_name">
          <% author.songs.each do |x| %>
            (<%= x.name %>)
          <% end %>
        </td>
        <td class="width_action">
          <%= link_to t(".view"), admin_author_path(author),
            class: "width_a btn btn-info btn-sm" %>
          <%= link_to t(".edit"), edit_admin_author_path(author),
            class: "width_a btn btn-warning btn-sm" %>
          <%= link_to t(".delete"), admin_author_path(author), method: :delete,
            class: "width_a btn btn-danger btn-sm", data: {confirm: t(".you_sure")} %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
