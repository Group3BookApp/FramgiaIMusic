<% @lyrics.each do |lyric| %>
  <table id="table" class="table table-hover">
    <tbody>
      <tr>
        <td class="width_description">
          <%= truncate lyric.content, length: 500 %>
        </td>
        <td class="width_name"><%= lyric.song.name %></td>
        <td class="width_name"><%= lyric.user.name %></td>
        <td class="width_action">
          <%= link_to t(".view"), admin_lyric_path(lyric),
            class: "width_a btn btn-info btn-sm" %>
          <%= link_to t(".edit"), edit_admin_lyric_path(lyric),
            class: "width_a btn btn-warning btn-sm" %>
          <%= link_to t(".delete"), admin_lyric_path(lyric), method: :delete,
            class: "width_a btn btn-danger btn-sm", data: {confirm: t(".you_sure")} %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
