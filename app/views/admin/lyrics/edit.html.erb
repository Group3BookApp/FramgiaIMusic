<div class="card card-plain">
  <div class="card-header card-header-primary">
    <h4 class="card-title mt-0"><%= t ".edit_lyrics" %></h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <%= simple_form_for [:admin, @lyric] do |f| %>
        <%= f.input :name, placeholder: t(".enter_name_edit") %>
        <%= f.input :description, placeholder: t(".enter_des_edit") %>
        <%= f.file_field :avatar %>
        <%= image_tag @lyric.avatar.url,size: Settings.size_avatar_edit %>
        <%= f.button :submit, class: "btn btn-primary" %>
        <%= link_to t(".backhome"), admin_lyrics_path, class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
