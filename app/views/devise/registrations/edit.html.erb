<div class="forgot_password">
  <h2><%= t ".edit" %> <%= resource_name.to_s.humanize %></h2>
  <%= simple_form_for resource, as: resource_name,
    url: registration_path(resource_name), html: { method: :put } do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t ".waiting_confirm" %><%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
      <%= f.label :password %> <i><%= t ".leave_blank" %></i>
      <br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> <%= t ".characters_minimum" %></em>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :current_password %> <i><%= t ".current_password_confirm" %></i>
      <br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="actions">
      <%= f.submit t(".update"), class: "btn btn-success" %>
    </div>
  <% end %>
  <h3><%= t ".cancel_my_account" %></h3>
</div>
  <p><%= t ".unhappy" %> <%= button_to t(".cancel_my_account"),
    registration_path(resource_name), data: {confirm: t(".are_you_sure")},
    method: :delete, class: "btn btn-danger" %></p>
  <%= link_to t("back"), :back %>
