<div id="page-wrapper">
  <div class="inner-content single">
    <div class="tittle-head">
      <h3 class="tittle"><%= t ".title_cate" %> <span class="new"><%= t ".cate_sub" %></span></h3>
      <div class="clearfix"> </div>
    </div>
    <div class="single_left">
      <div class="video-main">
        <div class="video-record-list">
          <div id="jp_container_1" class="jp-video jp-video-270p" role="application"
          aria-label="media player">
            <div class="jp-type-playlist">
              <h3><%= @song.name %></h3>
              <h4><%= t ".listening" %><%= @song.listening %></h4>
              <%= audio_tag @song.data.url, controls: true, autoplay: :true %>
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Create</button>
                <div id="myModal" class="modal fade" role="dialog">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Lyric</h4>
                      </div>
                      <div class="modal-body">
                        <%= simple_form_for [@song, @song.lyrics.build], class: "form-group" do |f| %>
                          <%#= f.label :content, t(".your_lyric"), class: "col-md-3 control-label" %>
                          <%= f.text_area :content, placeholder: t(".please_enter_lyric"), class: "ckeditor", rows: "5" %>
                          <%= f.submit t(".lyric"), class: "btn btn-success" %>
                        <% end %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
              <%#= render @song_lyrics %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"> </div>
  </div>
</div>
